<h1 id="starter-headline">Welcome, Pokemon Trainer <%= @trainer.name %>!</h1>

<h2 id="choose-starter">Please choose your starter Pokemon:</h2>

<div id="starters-container">
	<div id="starters">
		<%= link_to image_tag("bulbasaur.png"), trainer_starter_path(@trainer.id, species_id: 1), controller: :trainers, action: :starter, method: :post %>
		<%= link_to image_tag("charmander.png"), trainer_starter_path(@trainer.id, species_id: 4), controller: :trainers, action: :starter, method: :post %>
		<%= link_to image_tag("squirtle.png"), trainer_starter_path(@trainer.id, species_id: 7), controller: :trainers, action: :starter, method: :post %>
	</div>
</div>

<%= link_to "I'm a Magikarp. I want out.", trainer_path(@trainer), method: "delete", id: "quit" %>