<div class="container" id="pokedex">
  <div id="trainer-info">
    <h1 id="trainer-name">Pok√©mon Trainer <%= @trainer.name %></h1>
  </div>

  <%= button_to "I Want a New Pokemon", { action: "create", species_id: @random_pkmn_id } %>

  <div id="all-entries">
    <% @trainer.pocket_monsters.sort_by { |pokemon| pokemon.species_id }.each do |pokemon| %>
      <% pokemon_name = PokemonEntry.find(pokemon.species_id).species_name %>
      <div class="pokedex-entry">
        <div class="entry-header"><h2>No. <%= pokemon.species_id %> - <%= pokemon_name.capitalize %></h2></div>
        <%= image_tag("#{pokemon_name}.png", :alt => "#{pokemon_name}", :class => "pokedex-img") %>
      </div>
    <% end %>
  </div>

</div>

<audio loop id="background_audio" autoplay="autoplay">
  <source src="/assets/sound/trainer_profile.mp3" type="audio/mpeg" />
</audio>





