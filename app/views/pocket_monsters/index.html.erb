<% @trainer.pocket_monsters.each do |pokemon| %>
    <% pokemon_name = PokemonEntry.find(pokemon.species_id).species_name %>
    <%= image_tag("#{pokemon_name}.png", :alt => "#{pokemon_name}") %><br/>

    <div>You picked a <%= "#{pokemon_name.capitalize}" %>!</div>
<% end %>

<%= button_to "I Want a New Pokemon", { action: "create", species_id: (rand(151)+1) } %>

<audio loop id="background_audio" autoplay="autoplay">
  <source src="/assets/sound/trainer_profile.mp3" type="audio/mpeg" />
</audio>