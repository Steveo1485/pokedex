<div class="container" id="pokedex">
  <div id="trainer-info">
    <h1 id="trainer-name">Pok√©mon Trainer <%= @trainer.name %></h1>
  </div>

  <%= button_to "I Want a New Pokemon", { action: "create" }, { form_class: 'random_pokemon' }%>

  <div id="all-entries" >
    <% @trainer.pocket_monsters.sort_by { |pokemon| pokemon.species_id }.each do |pokemon| %>
      <%= render "pokedex_entry", :pokemon => pokemon %>
    <% end %>
  </div>

</div>

<audio loop id="background_audio" autoplay="autoplay">
  <source src="/assets/sound/trainer_profile.mp3" type="audio/mpeg" />
</audio>





